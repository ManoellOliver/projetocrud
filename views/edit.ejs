    <h2>Editar Registro</h2>
<% crud.forEach(function(details) { %>
    <form action="/edit/<%= details._id %>" method="POST">
        <label for="name">Nome completo:</label>
        <input type="text" value="<%= details.name %>" name="name" required>

        <label for="email">E-mail:</label>
        <input type="email" value="<%= details.email %>" name="email" required>

        <label for="dataNascimento">Data de Nascimento:</label>
        <input type="date" value="<%= details.dataNascimento %>" name="dataNascimento" required>
        <br/>

        <!-- Restante do formulÃ¡rio de cadastro... -->

        <label for="password">Senha:</label>
        <input type="password" id="password" name="password" required>
        <span id="password-error" class="error-message"></span>

        <label for="confirm-password">Confirmar Senha:</label>
        <input type="password" id="confirm-password" name="confirm-password" required>
        <span id="confirm-password-error" class="error-message"></span>

        <!-- ... outros campos ... -->

        <button><a href="/show">Todos</a></button>
        <button type="submit">Salvar</button>
    </form>
<% }) %>
</body>

